---
import { Image } from "astro:assets";
---

<section class="my-24 max-w-5xl mx-auto">
  <div class="flex flex-wrap items-center">
    <div class="w-full md:w-1/2">
      <h1 class="text-gradient font-bold mb-4 text-8xl">Byteteural</h1>
      <p class="mb-4 text-4xl">
        We <span class="text-red-600">take care</span> you work like our child
      </p>
    </div>
    <div class="w-full md:w-1/2">
      <Image
        src="https://placedog.net/360/360"
        alt="Image"
        width={360}
        height={360}
        class="float-right rounded-xl"
      />
    </div>
  </div>
</section>

<style>
  .text-gradient {
    background: linear-gradient(120deg, #ff00ff, 25%, #00ffff);
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
