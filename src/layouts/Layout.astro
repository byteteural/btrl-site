---
import "@fontsource/ubuntu";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  footer: boolean;
  linear_x: string;
  linear_y: string;
}

const { title, footer, linear_x, linear_y } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    {footer && <Footer />}
  </body>
</html>

<style is:global define:vars={{ linear_x, linear_y }}>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    user-select: none;
  }

  html {
    font-family: "Ubuntu", sans-serif;
    color: #fff;
    background: #161618;
    background-image: radial-gradient(
      farthest-corner at var(--linear_x) var(--linear_y),
      #011b45 0%,
      #161618 100%
    );
  }
</style>
